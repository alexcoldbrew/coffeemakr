<%= form_for(@recipe) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %> <br><br>

    <%= f.label :description %>
    <%= f.text_area :description %> <br><br>

    <%= f.label :date_created %>
    <%= f.date_select :date_created %> <br><br>

    <%= collection_check_boxes(:recipe, :ingredient_ids, Ingredient.all.alphabetize, :id, :name) %> <br><br>
    
    <%= f.submit %>

<% end %>