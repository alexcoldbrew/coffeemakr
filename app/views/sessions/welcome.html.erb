    <h2>You're currently logged in, <%= current_user.username %>. Would you like to <%= link_to "logout?", logout_path %></h2>
<% end %>

<p>
    <%= link_to "Login", login_path %>
    or
    <%= link_to "Signup", signup_path %>

    <br><br>

    <%= link_to("Login with Google", '/auth/google_oauth2', method: :post) %>
</p>