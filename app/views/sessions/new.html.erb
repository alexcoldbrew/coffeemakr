<h1>Log in!!!</h1>

<div class="fields_with_errors">

<% if flash[:messages] %>
    <%= flash[:messages] %> <br><br>
<% end %>

</div>

<%= form_tag '/login' do %>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :email%>
    <%= email_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Login" %>

<% end %>

